{$R *.fmx}

uses Unit4;

procedure Tmusik.Button1Click(Sender: TObject);
begin
  Form4.Show;
  musik.Visible :=  false;
end;

procedure Tmusik.ChangeTabActionPrevUpdate(Sender: TObject);
begin
if TabControl1.TabIndex < TabControl1.TabCount -1 then
    ChangeTabActionNext.Tab := TabControl1.Tabs[TabControl1.TabIndex + 1]
  else
    ChangeTabActionNext.Tab := nil;

  if TabControl1.TabIndex > 0 then
    ChangeTabActionPrev.Tab := TabControl1.Tabs[TabControl1.TabIndex - 1]
  else
    ChangeTabActionPrev.Tab := nil;
end;

procedure Tmusik.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  MediaPlayer1.Stop;
end;

procedure Tmusik.FormKeyUp(Sender: TObject; var Key: Word;
var KeyChar: Char; Shift: TShiftState);
begin
    if Key = vkHardwareBack then
  begin
    if TabControl1.TabIndex > 0 then
    begin
      TabControl1.TabIndex := TabControl1.TabIndex - 1 mod TabControl1.TabCount;
      Key := 0;
    end;
  end;
end;

procedure Tmusik.ListBoxItem11Click(Sender: TObject);
begin
  Label5.Text := 'Sulawesi Parasanganta.mp3';
  play3.Visible := true;
  stop3.Visible := true;
  play1.Visible := false;
  play1.Visible := false;
  play2.Visible := false;
  play2.Visible := false;
  MediaPlayer1.Stop;
end;

procedure Tmusik.ListBoxItem7Click(Sender: TObject);
begin
  Label5.Text := 'Pakarena.mp3';
  play1.Visible := true;
