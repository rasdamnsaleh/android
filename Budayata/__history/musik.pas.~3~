procedure TForm4.FormClose(Sender: TObject; var Action: TCloseAction);
begin
MediaPlayer1.Stop;
end;

procedure TForm4.ListBoxItem11Click(Sender: TObject);
begin
  Label5.Text := 'Sulawesi Parasanganta.mp3';
  play3.Visible := true;
  stop3.Visible := true;
  play1.Visible := false;
  play1.Visible := false;
  play2.Visible := false;
  play2.Visible := false;
  MediaPlayer1.Stop;
end;

